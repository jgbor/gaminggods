<resources>
    <!-- Base application theme. -->
    <style name="Theme.GamingGoods" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_1</item>
        <item name="colorPrimaryVariant">@color/red_2</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="Menu_Image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="Menu_Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/menu_text_size</item>
    </style>

    <style name="Menu_Text.DarkBackground" parent="Menu_Text">
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="Menu_Text.LightBackground" parent="Menu_Text">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>